pipeline {
    agent {
        docker {
            image 'node:22.14.0-alpine3.21'
            args '-w /workspace' // Set the working directory inside the container
        }
    }
    stages {
        stage('Test') {
            steps {
                sh 'node --eval "console.log(process.arch,process.platform)"'
            }
        }
    }
}
